<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.hmsservice.booking.FragmentBookingRemove">

    <TextView
        android:id="@+id/booking_main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:text="Fjern booking"
        />

    <TextView
        android:id="@+id/booking_main_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*sett inn velkomstmelding med instrukser*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_main_id"
        />

    <EditText
        android:id="@+id/removebooking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="@string/bookingId"
        android:autofillHints="@string/bookingId"

        android:inputType="textShortMessage"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_main_desc"
        />


    <Button
        android:id="@+id/removebooking_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/removebooking_id" />


</androidx.constraintlayout.widget.ConstraintLayout>